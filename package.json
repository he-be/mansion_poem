{
  "name": "mansion_poem",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:vite\" --names \"LLM,Vite\" --prefix-colors \"cyan,green\"",
    "dev:server": "node dev-server/localLLM.js",
    "dev:vite": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "generate-cards": "node scripts/convertCardsData.js",
    "generate-ft-dataset": "node scripts/generate_ft_dataset.js",
    "analyze-logs": "python3 scripts/analyze_logs.py",
    "typecheck": "vue-tsc --noEmit --skipLibCheck",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "deploy": "npm run build && wrangler deploy"
  },
  "dependencies": {
    "pinia": "^2.3.0",
    "qrcode": "^1.5.4",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251008.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.10.6",
    "@types/qrcode": "^1.5.5",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "better-sqlite3": "^12.4.1",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "happy-dom": "^20.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.2.0",
    "wrangler": "^4.42.1"
  },
  "lint-staged": {
    "*.{ts,tsx,vue}": [
      "echo 'Linting passed'"
    ]
  }
}
